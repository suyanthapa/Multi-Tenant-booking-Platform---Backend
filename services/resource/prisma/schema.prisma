generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

model Resource {
    id         String @id @default(uuid())
    businessId String @map("business_id")

    name        String
    type        ResourceType
    description String?

    price    Decimal        @db.Decimal(10, 2)
    currency String         @default("USD")
    status   ResourceStatus @default(ACTIVE)

    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    @@index([businessId])
    @@index([type])
    @@index([status])
    @@map("resources")
}

enum ResourceType {
    HOTEL_ROOM
    DOCTOR_SLOT
    SALON_CHAIR
    DESK
    OTHER
}

enum ResourceStatus {
    ACTIVE
    INACTIVE
    MAINTENANCE
    DELETED
}
