// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

model Business {
    id String @id @default(uuid())

    ownerId String @map("owner_id") // vendor userId

    name        String
    description String?
    type        BusinessType

    address String?
    phone   String?
    email   String?

    status BusinessStatus @default(PENDING)

    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    @@index([ownerId])
    @@index([type])
    @@index([status])
    @@map("businesses")
}

enum BusinessType {
    HOTEL
    CLINIC
    SALON
    CO_WORKING
    OTHER
}

enum BusinessStatus {
    PENDING // Newly created, waiting for admin review
    ACTIVE // Live and bookable
    INACTIVE // Temporarily hidden by the owner
    SUSPENDED // Blocked by Admin
    DELETED // Soft-deleted
}
